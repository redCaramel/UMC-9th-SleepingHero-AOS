<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SleepingHero" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/primary_300</item>
        <item name="colorSecondaryVariant">@color/primary_100</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowBackground">@color/gray_50</item>
        <item name="android:statusBarColor">@color/gray_50</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnError">@color/error</item>

        <item name="android:fontFamily">@font/inter</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="Title1">
        <item name="android:textSize">40sp</item>
        <item name="lineHeight">50sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Title2">
        <item name="android:textSize">28sp</item>
        <item name="lineHeight">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Body1">
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">40sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Body2">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">28sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Body3">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Body4">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">22sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>