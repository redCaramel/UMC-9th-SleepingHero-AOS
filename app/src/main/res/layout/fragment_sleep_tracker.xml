<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_50"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="120dp">

        <!-- 상단 달 아이콘 -->
        <ImageView
            android:id="@+id/iv_moon"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/home_sleep_moon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 타이머 -->
        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="@string/sleep_tracker_timer"
            android:textColor="@color/gray_900"
            android:textSize="36sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_moon" />

        <!-- 진행 정보 (0.0 / 8.5 시간) -->
        <TextView
            android:id="@+id/tv_progress_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/sleep_tracker_progress"
            android:textColor="@color/gray_700"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_timer" />

        <!-- 시간 범위 배경 + 텍스트 -->
        <FrameLayout
            android:id="@+id/time_range_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_progress_info">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="50dp"
                android:paddingLeft="50dp"
                android:src="@drawable/home_sleep_time" />

            <TextView
                android:id="@+id/tv_time_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:layout_marginTop="-8dp"
                android:text="@string/sleep_tracker_time_range"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:textSize="18sp" />
        </FrameLayout>

        <!-- 하단 준비 완료 텍스트 -->
        <TextView
            android:id="@+id/tv_ready"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="@string/sleep_tracker_ready"
            android:textColor="@color/gray_500"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/time_range_container" />

        <!-- 원형 프로그레스 영역 (어두운 배경 포함) -->
        <FrameLayout
            android:id="@+id/progress_circle_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_ready"
            app:layout_constraintWidth_percent="0.75">

            <!-- 어두운 배경 -->
            <ImageView
                android:id="@+id/iv_circle_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/home_sleep_circle_bg" />

            <!-- 회색 배경 원 -->
            <ImageView
                android:id="@+id/iv_circle_base"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/home_sleep_circle" />

            <!-- 파란색 프로그레스 원 (회전으로 진행률 표시) -->
            <ImageView
                android:id="@+id/iv_circle_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/home_sleep_circle1" />

            <!-- 중앙 퍼센트 표시 -->
            <TextView
                android:id="@+id/tv_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/sleep_tracker_percent"
                android:textColor="@color/gray_900"
                android:textSize="42sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- 버튼 그룹 -->
        <LinearLayout
            android:id="@+id/button_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progress_circle_container">

            <!-- 알람 설정 버튼 -->
            <FrameLayout
                android:id="@+id/btn_alarm"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_sleep_alarmsettingbutton" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:text="@string/sleep_tracker_alarm"
                    android:textColor="@color/gray_900"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <!-- 수면 종료 버튼 -->
            <FrameLayout
                android:id="@+id/btn_stop"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_sleep_stopbutton" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:text="@string/sleep_tracker_stop"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>

        <!-- 화면 잠금 설정 텍스트 -->
        <TextView
            android:id="@+id/tv_screen_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/sleep_tracker_screen_lock"
            android:textColor="@color/gray_700"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_group" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>