<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sleepStopRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_50">

    <!-- 중앙 다이얼로그 카드 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sleepStopCard"
        android:layout_width="328dp"
        android:layout_height="172dp"
        android:background="@drawable/sleepstop_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 상단 아이콘 -->
        <ImageView
            android:id="@+id/ivWarning"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:contentDescription="@null"
            android:src="@drawable/sleepstop_dangericon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 제목 -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="주의"
            android:textColor="@color/gray_900"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/ivWarning"
            app:layout_constraintTop_toTopOf="@id/ivWarning"
            app:layout_constraintBottom_toBottomOf="@id/ivWarning" />

        <!-- 안내 문구 -->
        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:text="수면을 중단하면 연속 달성이 초기화되고\n포인트를 받을 수 없습니다. 중단하시겠습니까?"
            android:textColor="@color/gray_700"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 버튼 영역 -->
        <LinearLayout
            android:id="@+id/buttonRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 계속 -->
            <FrameLayout
                android:id="@+id/btn_resume"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:background="@drawable/sleepstop_resume"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="계속"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <View
                android:layout_width="12dp"
                android:layout_height="1dp" />

            <!-- 중단 (resume이랑 동일 크기) -->
            <FrameLayout
                android:id="@+id/btn_stop"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:background="@drawable/sleepstop_stop"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="중단"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </FrameLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
