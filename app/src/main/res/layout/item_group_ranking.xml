<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="10dp"
    android:background="@drawable/bg_card"
    android:backgroundTint="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- 순위 텍스트: 왼쪽 끝에 고정 -->
        <TextView
            android:id="@+id/tv_char_rank"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_text"
            android:backgroundTint="@color/gray_200"
            android:gravity="center"
            android:text="0"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 프로필 이미지: 순위 옆에 배치 -->
        <ImageView
            android:id="@+id/img_char_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:adjustViewBounds="true"
            android:background="@drawable/bg_circle_body"
            android:backgroundTint="@color/gray_200"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_char_rank"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 정보 영역: 이름, 역할, 레벨 -->
        <TextView
            android:id="@+id/tv_char_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="김숙면"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/img_char_profile"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_group_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:background="@drawable/bg_card_rec"
            android:backgroundTint="@color/gray_200"
            android:drawablePadding="2dp"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:text="방장"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_char_name"
            app:layout_constraintStart_toEndOf="@+id/tv_char_name"
            app:layout_constraintTop_toTopOf="@+id/tv_char_name" />

        <!-- 하단 정보: 연속 달성 및 총 시간 -->
        <TextView
            android:id="@+id/tv_char_streak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="12일 연속"
            android:textColor="@color/gray_500"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tv_char_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_char_name" />

        <TextView
            android:id="@+id/tv_char_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="92시간"
            android:textColor="#30AB45"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_char_streak"
            app:layout_constraintStart_toEndOf="@+id/tv_char_streak"
            app:layout_constraintTop_toTopOf="@+id/tv_char_streak" />

        <!-- 레벨: 오른쪽 상단 혹은 적절한 위치로 이동 (공간 확보를 위해) -->
        <TextView
            android:id="@+id/tv_char_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lv.11"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
