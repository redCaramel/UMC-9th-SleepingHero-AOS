<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="50dp">

        <!-- 1. 상단 프로필 카드 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/home_profile_bg"
            android:paddingStart="20dp"
            android:paddingTop="24dp"
            android:paddingEnd="20dp"
            android:paddingBottom="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- 레벨 및 이름 -->
            <TextView
                android:id="@+id/tv_user_level_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LV.11 김민주 님"
                android:textColor="#1E3A5F"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 컨디션 버튼 (우측 상단) -->
            <FrameLayout
                android:id="@+id/btn_diary"
                android:layout_width="115dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/home_profile_conditionbg"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="14dp"
                android:paddingTop="6dp"
                android:paddingEnd="14dp"
                android:paddingBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/home_profile_check" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="최상 컨디션"
                        android:layout_marginTop="-1dp"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>

            <!-- 다음 레벨까지 -->
            <TextView
                android:id="@+id/tv_month_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="다음 레벨까지"
                android:textColor="#6B7280"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_user_level_name" />

            <!-- -80 EXP -->
            <TextView
                android:id="@+id/tv_exp_remaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="-80 EXP"
                android:textColor="#1E3A5F"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tv_month_status"
                app:layout_constraintStart_toEndOf="@id/tv_month_status"
                app:layout_constraintTop_toTopOf="@id/tv_month_status" />

            <!-- 하단 3개 아이콘 박스 -->
            <LinearLayout
                android:id="@+id/stats_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_month_status">

                <!-- 연속 수면 박스 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_profile_state"
                    android:paddingTop="12dp"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:id="@+id/icon_calendar"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:contentDescription="연속 수면"
                        android:src="@drawable/home_profile_calender"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_calendar_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="연속 수면"
                        android:textColor="#6B7280"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/icon_calendar" />

                    <TextView
                        android:id="@+id/tv_calendar_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-3dp"
                        android:text="61일"
                        android:textColor="@color/primary_500"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_calendar_label" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 총 수면 박스 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_profile_state"
                    android:paddingTop="12dp"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:id="@+id/icon_clock"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:contentDescription="총 수면"
                        android:src="@drawable/home_profile_clock"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_clock_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="총 수면"
                        android:textColor="#6B7280"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/icon_clock" />

                    <TextView
                        android:id="@+id/tv_clock_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-3dp"
                        android:text="70시간"
                        android:textColor="@color/primary_500"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_clock_label" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 친구 순위 박스 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_profile_state"
                    android:paddingTop="12dp"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:id="@+id/icon_trophy"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:contentDescription="친구 순위"
                        android:src="@drawable/home_profile_trophy"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_trophy_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="친구 순위"
                        android:textColor="#6B7280"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/icon_trophy" />

                    <TextView
                        android:id="@+id/tv_trophy_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-3dp"
                        android:text="8등"
                        android:textColor="@color/primary_500"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_trophy_label" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <!-- EXP Progress -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/exp_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/stats_container">

                <!-- EXP Progress 라벨 -->
                <TextView
                    android:id="@+id/tv_exp_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXP Progress"
                    android:textColor="#6B7280"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- 퍼센트 표시 -->
                <TextView
                    android:id="@+id/tv_exp_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="94%"
                    android:textColor="#1E3A5F"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- EXP 바 배경 -->
                <View
                    android:id="@+id/progress_exp_bg"
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/home_profile_greybar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_exp_label" />

                <!-- EXP 바 진행 -->
                <View
                    android:id="@+id/progress_exp"
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent="0.0"
                    android:layout_height="16dp"
                    android:background="@drawable/home_profile_bluebar"
                    app:layout_constraintStart_toStartOf="@id/progress_exp_bg"
                    app:layout_constraintTop_toTopOf="@id/progress_exp_bg" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="182dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 2. 맵/경로 카드 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/map_card"
            android:layout_width="0dp"
            android:layout_height="339dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/home_map_bg"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_card">

            <!-- ✅ 미니맵 이미지 (현재 레벨 구간만 보이게 크롭) -->
            <ImageView
                android:id="@+id/iv_home_mini_map"
                android:layout_width="300dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/map_path"
                android:contentDescription="@string/map_path_description"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 확대 아이콘 (우측 하단) -->
            <ImageView
                android:id="@+id/btn_zoom_in"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:contentDescription="확대"
                android:src="@drawable/home_map_zoomin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 3. 수면 시간 설정 카드 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSleepSetting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="14dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/map_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="수면 시간 설정"
                    android:textColor="#404040"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/bedtimeContainer"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="#E5E7EB"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="14dp">

                        <ImageView
                            android:id="@+id/icBed"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_alarm"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvBedLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="취침 시간"
                            android:textColor="#404040"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/icBed"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_bedtime_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11:00 PM"
                            android:textColor="#404040"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/icBedArrow"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/icBedArrow"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/wakeupContainer"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginBottom="14dp"
                    app:cardBackgroundColor="#E5E7EB"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="14dp">

                        <ImageView
                            android:id="@+id/icWake"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_alarm"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvWakeLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="기상 시간"
                            android:textColor="#404040"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/icWake"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_wakeup_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="07:00 AM"
                            android:textColor="#404040"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/icWakeArrow"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/icWakeArrow"
                            android:layout_width="18dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="15dp"
                    android:background="#314158" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvGoalLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="목표 수면 시간"
                        android:textColor="#404040"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_sleep_goal_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8시간"
                        android:textColor="#1B4E81"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 4. 수면 시작하기 버튼 -->
        <Button
            android:id="@+id/btn_start_sleep"
            android:layout_width="0dp"
            android:layout_height="74dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/home_startsleepbar"
            android:text="수면 시작하기"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:letterSpacing="0.04"
            android:lineSpacingExtra="24dp"
            android:gravity="center"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardSleepSetting" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>