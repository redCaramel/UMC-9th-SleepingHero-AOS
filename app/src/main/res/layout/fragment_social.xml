<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_200"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소셜"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="친구들과 함께 수면 목표를 달성하세요"
            android:textSize="14sp"
            android:textColor="#777777"
            android:paddingBottom="16dp" />

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_user_sample"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_social_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="김민주"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_social_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="총 245시간"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_social_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="130dp"
                    android:background="@drawable/bg_level_a"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="5dp"
                    android:drawableLeft="@drawable/ic_level"
                    android:drawablePadding="4dp"
                    android:text="Lv.11"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/btn_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_setting" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_social_following"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="34"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="팔로잉"
                        android:textColor="#777777"
                        android:textSize="12sp" />

                </LinearLayout>

                <View
                    android:id="@+id/view6"
                    android:layout_width="1dp"
                    android:layout_height="28dp"
                    android:background="#e0e0e0" />

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_social_follower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="34"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="팔로워"
                        android:textSize="12sp"
                        android:textColor="#777777" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="28dp"
                    android:background="#e0e0e0" />

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_social_streak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="연속일"
                        android:textSize="12sp"
                        android:textColor="#777777" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/et_social_search"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_search"
            android:hint="친구 검색..."
            android:paddingHorizontal="16dp"
            android:drawableLeft="@drawable/ic_find"
            android:drawablePadding="10dp"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/tabContainer"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/tab_friend"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingHorizontal="4dp"
                android:background="@drawable/tab_unselected"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/iconMyFriends"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_friend"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/textMyFriends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내 친구"
                    android:textSize="14sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab_group"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingHorizontal="4dp"
                android:background="@drawable/tab_unselected"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/iconGroup"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_group"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/textGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="그룹"
                    android:textSize="14sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab_recommend"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingHorizontal="4dp"
                android:background="@drawable/tab_unselected"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/iconRecommend"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_recommend"
                    android:layout_marginEnd="6dp"
                    app:tint="@color/gray_700" />

                <TextView
                    android:id="@+id/textRecommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추천"
                    android:textSize="14sp"
                    android:textColor="#666666" />
            </LinearLayout>


            <!-- TODO - fragmentContainer로 교체 -->
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginVertical="8dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/ic_friend_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아직 친구가 없습니다"
                android:textSize="14sp"
                android:textColor="#777777"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
