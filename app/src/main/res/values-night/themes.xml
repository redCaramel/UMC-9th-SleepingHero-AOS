<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SleepingHero" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/sub_gray</item>
        <item name="colorPrimaryVariant">@color/tri_gray</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/main_green</item>
        <item name="colorSecondaryVariant">@color/sub_green</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:windowBackground">@color/deep_gray</item>
        <item name="android:statusBarColor">@color/deep_gray</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:fontFamily">@font/dohyeon</item>
    </style>
    <style name="Title1">
        <item name="android:textSize">40sp</item>
        <item name="lineHeight">50sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Title2">
        <item name="android:textSize">28sp</item>
        <item name="lineHeight">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Body1">
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">40sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Body2">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">28sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Body3">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Body4">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">22sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
